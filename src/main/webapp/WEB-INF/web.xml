<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>controller.filter.LoginFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/start</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>controller.servlet.LoginServlet</servlet-class>
  </servlet>

   <servlet>
    <servlet-name>start</servlet-name>
    <servlet-class>controller.servlet.PresentationServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>tours</servlet-name>
    <servlet-class>controller.servlet.ChooseServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>sortVac</servlet-name>
    <servlet-class>controller.servlet.SortVacations</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>sortCruise</servlet-name>
    <servlet-class>controller.servlet.SortCruise</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>sortShop</servlet-name>
    <servlet-class>controller.servlet.SortShopping</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>sortTherapy</servlet-name>
    <servlet-class>controller.servlet.SortTherapy</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>start</servlet-name>
    <url-pattern>/start</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>tours</servlet-name>
    <url-pattern>/tours</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>sortVac</servlet-name>
    <url-pattern>/sortVac</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>sortCruise</servlet-name>
    <url-pattern>/sortCruise</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>sortShop</servlet-name>
    <url-pattern>/sortShop</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>sortTherapy</servlet-name>
    <url-pattern>/sortTherapy</url-pattern>
  </servlet-mapping>

</web-app>
